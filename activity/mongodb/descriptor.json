{
    "name": "flogo-mongodb",
    "type": "flogo:activity",
    "version": "0.0.1",
    "title": "MongoDB",
    "description": "Manage MongoDB documents in a specified collection",
    "homepage": "",
    "settings":[
      {
        "name": "uri",
        "type": "string",
        "required": true,
        "description": "The MongoDB connection URI"
      },
      {
        "name": "method",
        "type": "string",
        "allowed": [
          "GET",
          "DELETE",
          "INSERT",
          "UPDATE"
        ],
        "value": "INSERT",
        "required": true,
        "description": "The method type (DELETE, INSERT, UPDATE or REPLACE)"
      }, 
      {
        "name": "dbName",
        "type": "string",
        "required": true,
        "description": "The name of the database "
      },
      {
        "name": "collection",
        "type": "string",
        "required": true,
        "description": "The collection to work on "
      }
    ],
    "input": [
      {
        "name": "keyName",
        "type": "string",
        "description": "The name of the key to use when looking up an object (used in DELETE, UPDATE, and REPLACE) "
      },
      {
        "name": "keyValue",
        "type": "string",
        "description": "The value of the key to use when looking up an object (used in DELETE, UPDATE, and REPLACE)"
      },
      {
        "name": "data",
        "type": "object",
        "description": ""
      }
    ],
    "output": [
      {
        "name": "output",
        "type": "any",
        "description": ""
      },
      {
        "name": "count",
        "type": "integer",
        "description": ""
      }
    ]
  }