{
    "name": "flogo-mongodb",
    "type": "flogo:activity",
    "version": "0.0.1",
    "title": "MongoDB",
    "description": "Manage MongoDB documents in a specified collection",
    "homepage": "",
    "settings":[
      {
        "name": "uri",
        "type": "string",
        "required": true
      },
      {
        "name": "method",
        "type": "string",
        "allowed": [
          "GET",
          "DELETE",
          "INSERT",
          "UPDATE"
        ],
        "value": "INSERT",
        "required": true
      }, 
      {
        "name": "dbName",
        "type": "string",
        "required": true
      },
      {
        "name": "collection",
        "type": "string",
        "required": true
      }
    ],
    "input": [
      {
        "name": "keyName",
        "type": "string"
      },
      {
        "name": "keyValue",
        "type": "string"
      },
      {
        "name": "data",
        "type": "object"
      }
    ],
    "output": [
      {
        "name": "output",
        "type": "any"
      },
      {
        "name": "count",
        "type": "integer"
      }
    ]
  }